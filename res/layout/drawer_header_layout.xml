<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/drawer_header_icon"
        android:layout_width="240dip"
        android:layout_height="240dip"
        />

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_alignRight="@id/drawer_header_icon"
        android:layout_alignLeft="@id/drawer_header_icon"
        android:layout_alignBottom="@id/drawer_header_icon"
        android:background="#4DFFFFFF"
        android:gravity="center"/>

</RelativeLayout>
