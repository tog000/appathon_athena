<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:padding="12dip" >

    <com.athena.broncobattle.AchievementView
        android:id="@+id/achievement_icon"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dip"/>

    <TextView
        android:id="@+id/achievement_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/achievement_icon"
        android:gravity="top"
        android:textStyle="bold"
        android:text="@string/achievement_name_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/achievement_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/achievement_name"
        android:layout_centerVertical="true"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:text="@string/achievement_description_text"
        android:textSize="14sp" />

</RelativeLayout> 